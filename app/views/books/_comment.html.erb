<div class="comment-wrapper">
  <div class="container">
    <% book_comments.each do |book_comment| %>
    <div class="row no-gutter">

      <div class="col-md-2">
        <%= attachment_image_tag book_comment.user, :profile_image, :fill, 45, 45, fallback: "no_image.jpg", size:"45x45" %>
        <p>
          <%= book_comment.user.name %>
        </p>
      </div>
      <div class="col-md-5">
        <%= book_comment.comment %>
      </div>
      <div class="col-md-2 offset-md-2">
        <%= link_to "destroy", book_book_comment_path(book, book_comment), method: :delete, class:"btn btn-danger btn-sm" %>
      </div>
    </div>
    <% end %>
    <div class="comment_form">
      <%= form_with(model:[book, book_comment], local: true) do |f| %>
        <%= f.text_area :comment, rows:"3", placeholder: "コメントはここに", class:"form-control mb-3" %>

        <%= f.submit "送信", class:"btn btn-sm btn-info"%>
      <% end %>

    </div>

  </div>
</div>

