<% if book.favorited_by?(current_user) %>
  <p>
    <%= link_to  book.favorites.count, book_favorites_path(book), method: :delete, class:"far fa-heart heart_red" %>

  </p>


<% else %>
  <p>
    <%= link_to book_favorites_path(book), method: :post do %>
      <i class="far fa-heart heart_blue"></i><%= book.favorites.count %>
    <% end %>
  </p>
<% end %>