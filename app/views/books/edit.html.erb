<div class="container">
  <div class="row">
    <div class="col-7 mx-auto mt-4">
      <h2>Editing Book</h2>
      <%= render 'layouts/error', model: @book %>
      <%= form_with model:@book, local:true do |f| %>
        <div class="form-group">
          <%= f.label :title, "Title" %>
          <%= f.text_field :title, class:"form-control"%>
        </div>
        <div class="form-group">
          <%= f.label :opinion, "Opinion" %>
          <%= f.text_area :opinion, rows:"2", class:"form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit "Update Book", class:"btn btn-success" %>
        </div>
      <% end %>
      <%= link_to "Show", book_path(@book) %>
      <span>ï½œ</span>
      <%= link_to "Back", books_path%>


    </div>
  </div>
</div>