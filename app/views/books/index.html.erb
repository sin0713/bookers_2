<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'layouts/error', model: @book%>
      <%= render 'users/user_info', user: current_user %>
      <%= render 'books/new_book', book: @new_book %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2 class="mb-3" >Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <% @books.each do |book| %>
          <tbody>
            <tr>
              <td>
                <%= link_to user_path(book.user_id) do %>
                  <%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size: "40x40" %>
                <% end %>
              </td>
              <td class="text-dark">
                <%= link_to book_path(book) do %>
                  <%= book.title%>
                <% end %>
              </td>
              <td><%= book.body %></td>
              <td></td>
              <td>
                <%= render 'favorite', book: book %>
              </td>
              <td>
                コメント数：<%= book.book_comments.count %>
              </td>
            </tr>
          </tbody>
        <% end %>
      </table>


    </div>

  </div>
</div>

