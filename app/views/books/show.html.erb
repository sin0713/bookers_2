<div class="container">
  <div class="row">
    <div class="col-md-3 mt-4">
      <%= render 'users/user_info', user: @user %>
      <%= render 'books/new_book', book: @new_book %>
    </div>

     <div class="col-md-8 offset-md-1 mt-4">
       <h2>Book detail</h2>
       <table class="table">
         <tbody>
           <tr></tr>
           <tr>
             <td>
               <%= link_to user_path(@book.user) do %>
                 <%= attachment_image_tag @book.user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg", size: "50x50", class:"mb-2"  %>
                  <br>
                 <%= @book.user.name %>
               <% end %>
             </td>
             <td>
               <%= link_to book_path(@book) do %>
                 <%= @book.title %>
               <% end %>
             </td>
             <td><%= @book.opinion %></td>
             <td><%= link_to "Edit", edit_book_path(@book), class:"btn btn-success btn-sm" %> </td>
             <td><%= link_to "Destroy", book_path(@book), method: :delete, class:"btn btn-danger btn-sm", "data-confirm" => "本当に消しますか" %> </td>

           </tr>
         </tbody>
       </table>
     </div>
  </div>
</div>