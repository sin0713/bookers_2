<% if book.favorited_by?(current_user) %>
  <p>
    <%= link_to  book.favorites.count, book_favorites_path(book), method: :delete, remote: true, class:"far fa-heart heart_red" %>
  </p>
<% else %>
  <p>
    <%= link_to  book.favorites.count, book_favorites_path(book), method: :post, remote: true, class:"far fa-heart" %>
  </p>
<% end %>
