<table class="table table-hover">
  <thead>
    <tr>
      <th>Profile-image</th>
      <th></th>
      <th>Title</th>
      <th></th>
      <th>Opinion</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% books.each do |book| %>
    <tr>
      <td>
        <%= link_to books_path(book.user) do %>
          <%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size: "40x40"%>
        <% end %>
      </td>
      <td></td>
      <td class="book_title"><%=link_to book.title, books_path(book) %></td>
      <td></td>
      <td class="book_opinion"><%= book.body %></td>
      <td></td>
    </tr>
    <% end %>
  </tbody>
</table>