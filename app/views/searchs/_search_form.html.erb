<% if user_signed_in? %>
  <%= form_tag(search_path, method: :get) do %>
    <%= text_field_tag 'content', 'Name or Title', class:"form-control mb-1" %>
    <%= select_tag 'model', options_for_select({ "User" => "user", "Book" => "book"}) %>
    <%= select_tag 'method',
        options_for_select({"完全一致" => "perfect", "部分一致" => "pertial", "前方一致" => "prefix", "後方一致" => "backward"}) %>
    <%= submit_tag '検索', class:"btn btn-sm btn-primary" %>
  <% end %>
<% end %>

