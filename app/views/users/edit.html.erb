<div class="container">
  <div class="row">
    <div class="col-md-8 mx-auto mt-4">
    <h3>User info</h3>
    <%= render 'layouts/error', model: @user %>
      <%= form_with model:@user, local:true do |f| %>
        <div class="form-group">
          <%= f.label :name, "Name"%> <br>
          <%= f.text_field :name, autofocus: true, class:"form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :image, "Image" %> <br>
          <%= f.attachment_field :profile_image, placeholder: "ファイルを選択", class:"form-cotrol-file" %>
        </div>
        <div class="form-group">
          <%= f.label :introduction, "Introduction" %> <br>
          <%= f.text_area :introduction, placeholder:"紹介文", class:"form-control"%>
        </div>
        <div class="form-group">
          <%= f.submit "Update User", class:"btn btn-secondary"%>
        </div>
      <% end %>
    </div>
  </div>
</div>

