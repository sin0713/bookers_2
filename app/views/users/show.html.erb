<div class="container ">
  <div class="row">
    <div class="col-md-3 mt-4">
      <%= render 'layouts/error', model: @book %>
      <%= render 'user_info', user: @user %>
      <%= render 'books/new_book', book: @book %>
    </div>
    <div class="col-md-8 offset-md-1 mt-4">
      <h2 class="mb-3" >Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <% @books.each do |book| %>
          <tbody>
            <tr>
              <td>
                <%= link_to user_path(book.user_id) do %>
                  <%= attachment_image_tag book.user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg", size: "40x40" %>
                <% end %>
              </td>
              <td class="text-dark">
                <%= link_to book_path(book) do %>
                  <%= book.title%>
                <% end %>
              </td>
              <td><%= book.body %></td>
              <td>
                コメント数：<%= book.book_comments.count%>
              </td>
              <td></td>
            </tr>
          </tbody>
        <% end %>
      </table>

      <div class="7days-books">
        <h3>7日間分の投稿数</h3>
        <table id="day-count" class="table table-bordered">
          <thead>
            <tr>
              <th>6日前</th>
              <th>5日前</th>
              <th>4日前</th>
              <th>3日前</th>
              <th>2日前</th>
              <th>1日前</th>
              <th>本日</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td id="6days-ago"><%= @books.get_created_days_ago(6).count %></td>
              <td ><%= @books.get_created_days_ago(5).count %></td>
              <td><%= @books.get_created_days_ago(4).count %></td>
              <td><%= @books.get_created_days_ago(3).count %></td>
              <td><%= @books.get_created_days_ago(2).count %></td>
              <td><%= @books.created_day_ago.count %></td>
              <td><%= @books.created_today.count %></td>
            </tr>
          </tbody>
        </table>

      </div>
      <div class="w-100 mx-auto-0 ">
        <canvas id="mychart" class=""></canvas>
      </div>
      <script>
        $(document).on('turbolinks:load', function() {
          var ctx = document.getElementById('mychart');
          var myChart = new Chart(ctx, {
            type: 'line',
            data: {
              labels: ['6日前', '5日前', '4日前', '3日前', '2日前', '昨日', '今日'],
              datasets: [{
                label: '投稿数',
                data: [
                  <%= @books.get_created_days_ago(6).count %>,
                  <%= @books.get_created_days_ago(5).count %>,
                  <%= @books.get_created_days_ago(4).count %>,
                  <%= @books.get_created_days_ago(3).count %>,
                  <%= @books.get_created_days_ago(2).count %>,
                  <%= @books.created_day_ago.count %>,
                  <%= @books.created_today.count %>
                  ],
                borderColor: 'rgba(0,0,255,1)',
              }],
            },
            options: {
              y: {
                min: 0,
                max: 15,
              },
            },
          });
        });

      </script>

      <div class="book-ratio mt-3">
        <h3>投稿数の前日比・前週比</h3>
        <table id="day-count" class="table table-bordered">
          <thead>
            <tr>
              <th>今日の投稿数</th>
              <th>昨日の投稿数</th>
              <th>前日比</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= @books.created_today.count %></td>
              <td><%= @books.created_day_ago.count%></td>
              <td><%= @day_before_ratio %></td>
            </tr>
          </tbody>
        </table>
        <table class="table table-bordered" id="week-count">
           <thead>
            <tr>
              <th>今週の投稿数</th>
              <th>昨週の投稿数</th>
              <th>前週比</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td><%= @books.created_this_week.count %></td>
              <td><%= @books.created_last_week.count %></td>
              <td><%= @week_before_ratio %></td>
            </tr>
          </tbody>
        </table>
      </div>

    </div>


  </div>
</div>
