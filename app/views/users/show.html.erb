<div class="container">
  <div class="row">
    <div class="col-md-3 mt-4">
      <%= render 'layouts/error', model: @book %>
      <%= render 'user_info', user: @user %>
      <%= render 'books/new_book', book: @book %>
    </div>
    <div class="col-md-8 offset-md-1 mt-4">
      <div class="book-count-form">
        <%= form_with url: user_search_path(@user), method: :get do |f| %>
        <%= f.date_field :created_at %>
        <%= f.submit '検索', class: "btn btn-primary" %>
        <% end %>
      </div>
      <div id="book-count-result">
        <% if @search_book.present? %>
          <%= render 'search', search_book: @search_book %>
        <% end %>
      </div>

      <%= render 'book_index', books: @books%>
    </div>
  </div>
</div>
